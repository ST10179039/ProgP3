@model AgriEnergyP2.Models.ViewModel.AddFarmerViewModel

@{
    ViewData["Title"] = "Add Farmer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Validation Summary -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <form asp-action="AddFarmer" method="post" novalidate>
                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="bi bi-envelope-fill me-1"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Enter farmer's email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="bi bi-shield-lock-fill me-1"></i>Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Farm Name -->
                        <div class="mb-3">
                            <label asp-for="FarmName" class="form-label fw-semibold">
                                <i class="bi bi-house-door-fill me-1"></i>Farm Name
                            </label>
                            <input asp-for="FarmName" class="form-control" placeholder="Enter farm name" />
                            <span asp-validation-for="FarmName" class="text-danger small"></span>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt-fill me-1"></i>Location
                            </label>
                            <input asp-for="Location" class="form-control" placeholder="Enter farm location" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i>Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle-fill me-1"></i>Add Farmer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
