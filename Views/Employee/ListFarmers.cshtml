@model IEnumerable<AgriEnergyP2.Models.Farmer>

@{
    ViewData["Title"] = "Farmer List";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-people-fill me-2"></i>@ViewData["Title"]
                    </h4>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left-circle-fill me-1"></i>Back to Dashboard
                    </a>
                </div>

                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle-fill me-2"></i>No farmers found.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="bi bi-house-door-fill me-1"></i>Farm Name</th>
                                        <th><i class="bi bi-geo-alt-fill me-1"></i>Location</th>
                                        <th><i class="bi bi-calendar-date me-1"></i>Date Joined</th>
                                        <th><i class="bi bi-envelope-fill me-1"></i>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var farmer in Model)
                                    {
                                        <tr>
                                            <td>@farmer.FarmName</td>
                                            <td>@farmer.Location</td>
                                            <td>@farmer.DateJoined.ToShortDateString()</td>
                                            <td>@farmer.ApplicationUser?.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
