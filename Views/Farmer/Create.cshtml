@model AgriEnergyP2.Models.ViewModel.ProductCreateViewModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-box-seam-fill me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-tag-fill me-1"></i>Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label fw-semibold">
                                <i class="bi bi-tags-fill me-1"></i>Type
                            </label>
                            <input asp-for="Type" class="form-control" placeholder="Enter product type" />
                            <span asp-validation-for="Type" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductionDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event-fill me-1"></i>Production Date
                            </label>
                            <input asp-for="ProductionDate" class="form-control" type="date" />
                            <span asp-validation-for="ProductionDate" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle-fill me-1"></i>Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
